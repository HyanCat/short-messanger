{
    "name": "hyancat/short-messenger",
    "description": "PHP 短信信使，支持阿里云短信和 SendCloud 短信。",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "HyanCat",
            "email": "hyancat@live.cn"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "suggest": {
        "illuminate/support": "Required for laravel or lumen."
    },
    "autoload": {
        "psr-4": {
            "HyanCat\\ShortMessenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "stable"
}
